@using TheBlogProject.Models
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<Blog>


@{
    ViewData["Title"] = "Home Page";
}



<!-- breadcrumb-area end -->
<!-- Blog Details Wrapper Start -->
<div class="blog-details-wrapper section-space--ptb_80">
    <div class="container">
        <div class="row row--17">
            <div class="blog-details-col-8">
                <div class="row">
                    <!-- Author Blog Post Wrap Start -->
                    <div class="author-blog-post-wrap masonary-item cat--3">
                        @foreach (var blog in Model)
                        {
                            <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-id="@blog.Id" class="author-blog-thum">
                            <img src="../assets/images/author/author-post-01.jpg" alt="">
                        </a>
                        <div class="author-blog-post-content">
                            <div class="blog-details-meta-box">
                                <div class="post-meta-left-side mb-2">
                                    <div class="blog-post-category">
                                        
                                        <a href="#" class="btn-medium business mr-1"></a>
                                    </div>
                   
                                    <div class="blog-post-author">
                                        Authored by <a href="#">@blog.BlogUser.FullName</a>
                                    </div>
                                </div>
                                <div class="post-right-side mb-2">
                                    <span class="post-meta-left-side">
                                        <span class="post-date">
                                            <i class="icofont-ui-calendar"></i>
                                            <a href="#">@blog.Created.ToString("MMM dd, yyyy")</a>
                                        </span>
                                    </span>
                                    <span>10 min read</span>
                                </div>
                            </div> 
                            <h3 class="title mb-2">
                                <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-id="@blog.Id">
                                    @blog.Name
                                </a>
                            </h3>
                            <p class="mb-2">
                               @blog.Description
                            </p>
                        </div>
                        }
                       
                    </div><!-- Author Blog Post Wrap End -->
                   
                </div>
            </div>
           
            </div>
        </div>

        <!-- Blog Details Wrapper End -->
    
</div>
